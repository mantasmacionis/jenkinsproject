pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Checkout the code from the Git repository
                    git 'https://github.com/mantasmacionis/jenkinsproject.git'
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Compile your Java code
                    sh 'javac -d . *.java'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Run your Java tests
                    sh 'java -cp . StudentTest'
                }
            }
        }
    }
}