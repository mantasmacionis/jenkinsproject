pipeline {
    agent any

    stage('Checkout') {
        steps {
            script {
                // Git checkout
                git branch: 'main', credentialsId: 'c225e912-8f08-4a7c-93c1-22c60f76361d', url: 'https://github.com/mantasmacionis/jenkinsproject.git'
            }
        }
    }

        stage('Build') {
            steps {
                script {
                    // Compile Java files
                    sh 'javac -d . *.java'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Run JUnit 5 tests
                   sh 'java -cp . StudentTest'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                     echo 'Pipeline completed successfully!'
                }
            }
        }
    }
}