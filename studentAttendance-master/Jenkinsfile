pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                script {
                    // Git checkout
                    git url: 'https://github.com/mantasmacionis/jenkinsproject'
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    // Compile Java files
                    sh 'javac -d . *.java'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Run JUnit 5 tests
                   sh 'java -cp . StudentTest'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                     echo 'Pipeline completed successfully!'
                }
            }
        }
    }
}